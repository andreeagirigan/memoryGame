                </Button>

                <Button Style="{StaticResource ButtonStyle}" x:Name="imagineaButonului3" Click="imagineaButonului3_Click" PreviewMouseDown="Button_PreviewMouseDown" Height="150" Width="150" Margin="324,102,274,476">


